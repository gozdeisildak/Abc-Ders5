
@{
    ViewBag.Title = "GotoPayment";
}

<h2>GotoPayment</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2> Information of Car You Rented</h2>
            <hr />
            <p>Please fill your information </p>
            @using (Html.BeginForm("GotoPayment", "Checkout"))
            {
                <form action="#" class="request-form ftco-animate">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">the name of the person who will receive the car</label>
                            <input value="@User.Identity.Name" type="text" name="DeliverName" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlInput1">Identity Number of the person who will receive the car</label>
                            <div class="col-sm-8">
                                <input type="text" name="TcNo" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="label">Pick-up location</label>
                            <input type="text" name="city1" class="form-control" placeholder="City, Airport, Station, etc" value="@TempData.Peek("city1")">
                        </div>
                        <div class="form-group">
                            <label for="" class="label">Pick-up location</label>
                            <input type="text" name="city2" class="form-control" placeholder="City, Airport, Station, etc" value="@TempData.Peek("city2")">
                        </div>

                        <div class="d-flex">
                            <div class="form-group mr-2">
                                <label for="" class="label">Pick-up date</label>
                                <input type="text" name="tarih1" class="form-control" id="datepicker" placeholder="Date" value="@TempData.Peek("tarih1")">
                            </div>
                            <div class="form-group mr-2">
                                <label for="" class="label">Pick-up date</label>
                                <input type="text" name="tarih2" class="form-control" id="datepicker2" placeholder="Date" value="@TempData.Peek("tarih2")">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Payment" class="btn btn-warning">
                        </div>


                    </div>

                </form>

            }
        </div>
    </div>
