                        </div>
                        <div class="col-lg-2 col"></div>
                        <div class="col-lg-4 col-md-6 mt-0 mt-md-5 d-flex">
                            @using (Html.BeginForm("List", "Home"))
                            {
                            <form action="#" class="request-form ftco-animate">
                                <h2>Make your trip</h2>
                                <div class="form-group">
                                    <label for="" class="label">Pick-up location</label>
                                    <input type="text" name="city" class="form-control" placeholder="City, Airport, Station, etc">
                                </div>

                                <div class="form-group">
                                    <label for="" class="label">Leaving location</label>
                                    <input type="text" name="city2" class="form-control" placeholder="City, Airport, Station, etc">
                                </div>
                            
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Pick-up date</label>
                                        <input type="text" name="tarih1" class="form-control" id="datepicker" placeholder="Date" autocomplete="off">
                                    </div>
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Leaving date</label>
                                        <input type="text" name="tarih2" class="form-control" id="datepicker2" placeholder="Date" autocomplete="off">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Search Vehicle" class="btn btn-primary py-3 px-4">
                                </div>
                            </form>

                            }
